{% if links %}
    {% if links|length == 1 %}
        {# show only alternate language button #}
        {{ (links|first).link }}
    {% else %}
        {# show selected language in button and other languages in drop down #}
        <div id="dropdown-language" class="dropdown">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" data-toggle="dropdown"><span class="btn-ci ci-web"></span> {{ links['activeLink'].text }} <span class="btn-ci ci-down arrow"></span></button>
            <ul class="dropdown-menu">
                {% for key, item in links %}
                    {% if key is not same as("activeLink") %}
                    <li>{{ item.link }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>   
    {% endif %}
{% endif %}