{#
    Variables
	img1: background image
  gradient: 1 apply gradient and 0 not apply
	text1: text
	text2: link text
	target: target link
	link: link
	background_color: style of button
	color_fondo: background color
  customHeight: Custom Height for block
  customStyle: Custom class
  visibility: Hide block for tye users selected
  ocultar: dispositivos en los que el bloque no se mostrar√°. Opciones: 'escritorio', 'movil', 'tablet'
#}


{% set build_texto1 = {
    '#type':   'processed_text',
    '#text':    text1.value,
    '#format': 'rich_text',
  }
%}

{% if gradient == 1 %}
  {% set style_gradient =
    'linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5)),'
  %}
{% endif %}

{% if (visibility == 'users') and (logged_in == true) %}

{% elseif visibility == 'anonymous' and (logged_in == false) %}

{% else %}
<div class="cta {{ background_color }} {{ customStyle }}
{% if hide['escritorio'] %}  d-lg-none d-xl-none {% else %} d-lg-block d-xl-block  {% endif %}
{% if hide['tablet'] %} d-md-none {% else %} d-md-block {% endif %}
{% if hide['movil'] %} d-none d-sm-none {% else %} d-xs-block d-sm-block {% endif %}
"style="background-image: {% if style_gradient %} {{ style_gradient }} {% endif %} url('{{ img1 }}');
{% if height  %} padding:0px!important; {% endif %} {% if background_color %} background-color:{{ background_color }}; {% endif %}">

  <div class="row justify-content-center align-items-center {% if height %} {{ height }} {% endif %}" style="{% if customHeight  %} height:{{ customHeight }} {% endif %}">
    <div class="col-12">
      <h4 class="{% if background_color == 'sin-fondo' or background_color == 'fondo-blanco' %} gris3  {% endif %}">
        {{ build_texto1 }}
       </h4>
      {% if link %}
        <br><a target="_blank" class="{{ button_color }}" href="{{ link }}" role="button">{{ text2 }}</a>
      {% else %}
        {% if autocomplete %}
          <br><a target="_self" class="{{ button_color }}" href="/node/{{ autocomplete }}" role="button">{{ text2 }}</a>
        {% endif %}
      {% endif %}
    </div>
  </div>

</div>
{% endif %}


